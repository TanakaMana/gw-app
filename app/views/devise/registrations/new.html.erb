<!doctype html>

<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<!------ Include the above in your HEAD tag ---------->
<html lang="ja">
    
<style>
    body{
        background: url(../img/tree_bark.png)
    }
    
</style>
    
<head>
<title>ログイン画面</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>

<body>
<div class="container">
<br>  <h2 class="text-center">メンバー登録画面</h2>
<hr>
    </div>



<div class="container">
<div class="card mx-auto col-8 float-center">
<article class="card-body">

<%= form_for(@user) do |f| %>

   <form>
    <div class="form-group">
      <%= f.label :user_id, 'ユーザーID' %>
      <%= f.text_field :user_id, class: 'form-control', :placeholder => "shin.dartsbot" %>
    </div>
         
    <div class="form-group">
      <%= f.label :surname, '苗字' %>
      <%= f.text_field :surname, class: 'form-control', :placeholder =>"今井" %>
    </div> 
         
    <div class="form-group">
      <%= f.label :email, 'email' %>
      <%= f.text_field :email, class: 'form-control', :placeholder => "shin@dartsbot.com" %>
    </div>
         
    <div class="form-group"> 
    <div class="checkbox">
      <%= f.label :admin, '管理者' %>
      <%= f.check_box :admin %>
    </div> <!-- checkbox .// -->
    </div> <!-- form-group// -->
        
         <!-- form-group// -->
    <div class="form-group">
      <%= f.label :encrypted_password, 'パスワード' %>
      <%= f.text_field :encrypted_password, class: 'form-control', :placeholder => "******" %>
    </div>
     <!-- form-group// --> 
    <!--　フロント側で合致の確認 --> 
        <div class="form-group"> 
        <label>確認用パスワード</label>
        <input class="form-control" id = "re-password" placeholder="******" type="password">
    </div>

     <!-- form-group// -->  

    <div class="form-group">
        <%= f.submit '登録 ', class: 'btn btn-primary btn-block'%>

</div>
    </div> <!-- form-group// -->                                                           
</form>
</article>
</div> <!-- card.// -->
    </div>


</body>
</html>

<% end %>