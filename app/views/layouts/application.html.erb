<!DOCTYPE html>
<html>
  <head>
    <title>PocPortal</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
	<p class="notice"><%= notice %></p>
	<p class="alert"><%= alert %></p>
	<% if user_signed_in? %>
	<p><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></p>
	<% end %>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
